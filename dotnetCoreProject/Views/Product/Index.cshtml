@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4 pb-3">All Products</h1>
<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">

            <div class="card mb-3">
                <div class="card-body">

                    <div class="agx d-none">


                        <img src="~/images/ZZ5H.gif" width="20">
                        <p class="lead alert alert-success text-center d-none">
                            the product has been added successfully
                        </p>
                    </div>

                    <img src="~/media/products/@item.Image" class="img-fluid" />

                    <h3>@item.Name</h3>
                    <p>@Html.Raw(item.Description)</p>
                    <p>@item.Price.ToString("c2")</p>
                    <a asp-controller="Card" asp-action="add" data-id="@item.Id" asp-route-id="@item.Id" class="btn btn-primary addToCart">Add To Cart</a>
                </div>
            </div>


        </div>

    }

</div>

@if (ViewBag.TotalPages > 1)
{


    <div class="d-flex justify-content-center">
        <Pagination page-count="@ViewBag.TotalPages" page-target="/product" page-number="@ViewBag.PageNumber" page-range="@ViewBag.range"></Pagination>
    </div>

}



@section scripts{

    <script>
        $(function () {

            $("a.addToCart").click(function (e) {

                e.preventDefault();
                let id = $(this).data("id");

                let divAgx = $(this).parent().parent().find("div.agx");
                divAgx.removeClass("d-none");


                $.get('/card/add/' + id, {}, function (data) {

                    $("div.smallCart").html(data);

                    divAgx.find("img").addClass("d-none");
                    divAgx.find("p").removeClass("d-none");

                    setTimeout(() => {

                        divAgx.animate({ opacity: 0 }, function () {

                            $(this).addClass("d-none").fadeTo(.1, 1);
                            $(this).find("img").removeClass("d-none");
                            $(this).find("p").addClass("d-none");



                        });



                    });



                });


            });


        });
    </script>


}

